<view class="container">
  <!--用户头像 姓名  -->
  <view class='UserInformation flexCol'>
    <image src='/images/peopleCenter.png' class='pic'> </image>
    <view class="userinfo">
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      <text class="userinfo-nickname">
          陈嘻嘻
        </text>
    </view>
  </view>
  <!--个人中心分类——>乘车 开通 问题 暂停  -->
  <view class='classify'>
    <!--乘车记录  -->
    <view class='flexRow'  bindtap='RideRecord'>
      <image src='/images/pic1.png' class='pic'></image>
      <text>乘车记录</text>
      <image src='/images/pic5.png' class='sign'></image>
    </view>
    <view class='flexRow' bindtap='BusList'>
      <image src='/images/pic2.png'  class='pic'></image>
      <text>开通路线</text>
      <image src='/images/pic5.png' class='sign'></image>
    </view>
    <view class='flexRow' bindtap='CommonProblem'>
      <image src='/images/pic3.png' class='pic'></image>
      <text>常见问题</text>
      <image src='/images/pic5.png' class='sign'></image>
    </view>
    <view class='flexRow' bindtap='StopService'>
      <image src='/images/pic4.png' class='pic'></image>
      <text>暂停使用</text>
      <image src='/images/pic5.png' class='sign'></image>
    </view>
  </view>
</view>