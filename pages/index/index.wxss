/* 页脚样式   */
@import "../footer-template/footer-template.wxss";

/*背景  */

page {
  background: #1d7ce8;
  background-size: 100%;
}

/*主体内容*/

.content {
  width: 92%;
  height: 1020rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 10rpx;
}

/*通知公告  */

.noticeContainer {
  background: #ffd766;
  width: 100%;
  height: 60rpx;
  color: #fff;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 5%;
  font-size: 24rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.notice_icon {
  color: black;
  width: auto;
  height: 100%;
  display: flex;
  align-items: center;
}

.notice_icon image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.noticeSwiper {
  height: 100%;
  flex: 1;
  color: black;
}

.noticeSwiper swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.noticeSwiper swiper-item text {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

/**用户信息**/

.userinfo {
  width: 100%;
  display: flex;
  align-items: center;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx 20rpx 20rpx 40rpx;
  border-radius: 50%;
  box-shadow: 1px 1px 5px 1px #ddd;
}

.userinfo-nickname {
  display: flex;
  color: #fff;
  font-size: 32rpx;
  font-family: sans-serif;
}

/*地理位置  */

.location {
  width: 200rpx;
  height: 66rpx;
  margin-left: 240rpx;
  font-size: 32rpx;
  color: #fff;
  position: relative;
}
.location text{
  position: absolute;
  top: 12rpx;
  left: 80rpx;
}
/*广告位  */

.advertContainer {
  width: 100%;
  height: 560rpx;
}

.advertSwiper {
  width: 100%;
  height: 100%;
}

.advertSwiper swiper-item image {
  width: 100%;
  height: 100%;
}

/*快速乘车  */

.rideCarContainer {
  width: 90%;
  height: 90rpx;
  margin-top: 60rpx;
  display: flex;
  color: #fff;
  font-size: 32rpx;
  box-sizing: border-box;
  border-radius: 6rpx;
  padding: 0 5%;
  align-items: center;
  background: -webkit-linear-gradient(0deg, #1653c7, #2215a6);
}

.rideCarContainer view {
  margin: 0 auto;
}
