/*整体  */

.btnContent {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 乘车图片 */

.carIcon {
  width: 100%;
  height: 640rpx;
  margin-bottom: 38rpx;
}

/*龙嘉机场出行码  */

.signName {
  font-weight: bold;
  font-size: 32rpx;
}

.sign {
  font-size: 28rpx;
  color: #666;
  margin-top: 20rpx;
}

/* 开通服务 */

.passRide {
  width: 90%;
  height: 100rpx;
  margin: 50rpx 0 0;
  border-radius: 8rpx;
  color: #fff;
  font-size: 32rpx;
  background: -webkit-linear-gradient(0deg, #1653c7, #2215a6);
  background-size: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/*授权协议*/

.pull-left {
  position: relative;
  width: 88%;
  margin-top: 90rpx;
}
/*授权协议本文*/

.authority {
  width: 88%;
  font-size: 26rpx;
  text-indent: 40rpx;
  line-height: 40rpx;
}

checkbox .wx-checkbox-input {
  /* 自定义样式.... */
  border-radius: 3rpx;
  height: 26rpx;
  width: 26rpx;
  margin-top: -4rpx;
}

/* checkbox选中时样式 */

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  /* 自定义样式.... */
  background-color: #1653c6;
  border: 1rpx solid #1653c6;
}
/*请先阅读并同意协议  */
.tip{
  position: absolute;
  top: -60rpx;
  left: -20rpx;
  width: 40%;
  height: 80rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
  background: url("data:image/png;base64,") no-repeat;
    background-size: 100%;
}
